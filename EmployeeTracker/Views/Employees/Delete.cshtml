@model EmployeeTracker.Models.Employee
@using EmployeeTracker.Models

@{
    ViewBag.Title = "Delete";
}

<div>
    <div class="container col-md-12">
        <h3>Are you sure you want to delete @Html.DisplayFor(model => model.FullName)?</h3>
        <hr />
        <dl class="dl-horizontal col-md-8">
            <dt>Department</dt>
            <dd>
                @Html.DisplayFor(model => model.Department.Name)
            </dd>

            <dt>Job Title</dt>
            <dd>
                @Html.DisplayFor(model => model.JobTitle.Name)
            </dd>

            @if (Model.Manager != null)
            {
                <dt>Manager</dt>
                <dd>
                    @Html.DisplayFor(model => model.Manager.FullName)
                </dd>
            }

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PreferredPhoneNumber)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.PreferredPhoneNumber)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AddressLine1)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AddressLine1)
            </dd>

            @if (!string.IsNullOrEmpty(Model.AddressLine2))
            {
                <dt>
                    @Html.DisplayNameFor(model => model.AddressLine2)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.AddressLine2)
                </dd>
            }

            @if (!string.IsNullOrEmpty(Model.AddressLine3))
            {
                <dt>
                    @Html.DisplayNameFor(model => model.AddressLine3)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.AddressLine3)
                </dd>
            }

            <dt>
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.City)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.State)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.State)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Zip)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Zip)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StartDate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.StartDate)
            </dd>

            @if (Model.EndDate != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.EndDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.EndDate)
                </dd>
            }

            <dt>
                @Html.DisplayNameFor(model => model.Shift)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Shift)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd>
                @PrettyPrintHelpers.PrettyPrintJobStatus(Model.Status)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PermissionLevel)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.PermissionLevel)
            </dd>
        </dl>

        @if (Model.Image != null)
        {
            <div class="container col-md-4">
                <img class="img-thumbnail" width="100%"
                     src="@Url.Action("GetImage", "Employees", new { employeeID = Model.ID })" />
            </div>
        }
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
